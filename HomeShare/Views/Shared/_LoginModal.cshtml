@model HoliDayRental.Models.ConnectionForm
<!-- Modal -->
<div id="loginpop" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="row">
                <div class="col-sm-6 login">
                    <h4>Login</h4>
                    <form class="" role="form" asp-controller="Account" asp-action="Login">
                        <div class="form-group">
                            <label asp-for="@Model.Login" class="sr-only"></label>
                            <input asp-for="@Model.Login" class="form-control" placeholder="jhonSuper">
                            <span asp-validation-for="@Model.Login" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Password" class="sr-only"></label>
                            <input asp-for="@Model.Password" class="form-control" placeholder="Mot de passe">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </form>
                </div>
                <div class="col-sm-6">
                    <h4>Nouvel utilisateur?</h4>
                    <p>Rejoignez nous maintenant et profitez des propriétés de nos membres.</p>
                    <span class="btnAction">@Html.ActionLink("S'enregistrer", "Create", "Membre")</span>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- /.modal -->
    