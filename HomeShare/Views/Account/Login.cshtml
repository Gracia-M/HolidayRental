@model HoliDayRental.Models.ConnectionForm

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>ConnectionForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" placeholder="jhonSuper" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Mot de passe" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Se Connecter" class="btn btn-primary" />
            </div>
        </form>
        <div class="col-sm-6">
            <h4>Nouvel utilisateur?</h4>
            <p>Rejoignez nous maintenant et profitez des propriétés de nos membres.</p>
            <span class="btnAction">@Html.ActionLink("S'enregistrer", "Create", "Membre")</span>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}